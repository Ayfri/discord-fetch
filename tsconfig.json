{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "types",
		"lib": ["ESNext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
		"pretty": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "esNext"
	},
	"exclude": ["node_modules"]
}
